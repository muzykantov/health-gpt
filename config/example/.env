# LLM Configuration
# Required: Choose provider - "gigachat" or "chatgpt"
LLM_PROVIDER=gigachat

# GigaChat credentials (required if using gigachat)
GIGACHAT_CLIENT_ID=your-gigachat-client-id
GIGACHAT_CLIENT_SECRET=your-gigachat-client-secret

# ChatGPT credentials (required if using chatgpt)
CHATGPT_API_KEY=your-chatgpt-api-key

# Telegram Configuration
# Required: Bot token from @BotFather
TELEGRAM_TOKEN=your-telegram-bot-token

# PostgreSQL Configuration
# These settings will override values from config.json
POSTGRES_HOST=postgres     # Database host (default: postgres)
POSTGRES_PORT=5432         # Database port (default: 5432)
POSTGRES_USER=health_gpt   # Database user
POSTGRES_PASSWORD=secret   # Database password
POSTGRES_DB=health_gpt     # Database name
POSTGRES_SSL_MODE=disable  # SSL mode (default: disable)

# Storage Configuration
# Available types: "postgres", "file", "memory"
STORAGE_HISTORY_TYPE=postgres  # History storage type
STORAGE_USERS_TYPE=file        # Users storage type